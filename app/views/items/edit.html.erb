<div class="container pt-5">
  <div class="row justify-content-center p-3">
    <div class="col-8">
      <div class="add-item">
        <%= simple_form_for @item do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :category, collection: Item::CATEGORIES %>
          <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
